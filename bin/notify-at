#!/bin/bash

# Send notification at specified time
#
# Requirements:
# - ./notify
#
# ```shell-session
# $ notify-at 12:00 title message  # The notification is shown at 12:00
# ```

set -e

if [ $# -lt 3 ] ; then
  echo "Usage: $0 HH:MM title message [sound]"
  echo "Example: $0 13:30 'Reminder' 'Meeting time' default"
  exit 1
fi

time="$1"
title="$2"
message="$3"
sound="${4:-${BASH_TOYS_NOTIFY_AT_DEFAULT_SOUND:-default}}"
now=$(date +%s)

# TODO: Create date wrapper for GNU date and VSD date
if date --version >/dev/null 2>&1; then
  # GNU date (Linux)
  today=$(date +%Y-%m-%d)
  target=$(date -d "$today $time" +%s 2>/dev/null || {
    echo "Error: Invalid time format (HH:MM)"
    exit 1
  })
else
  # BSD date (macOS)
  target=$(date -j -f "%H:%M" "$time" +%s 2>/dev/null || {
    echo "Error: Invalid time format (HH:MM)"
    exit 1
  })
fi

# If specified time is in the past, treat it as tomorrow
if [[ $target -le $now ]] ; then
  target=$((target + 86400))
fi

seconds=$((target - now))
minutes=$((seconds / 60))

echo "Notification scheduled: $time ($minutes minutes later)"
echo "Title: $title"
echo "Message: $message"

(
  sleep $seconds
  notify "$title" "$message" "$sound"
) &

echo "Process ID: $!"

