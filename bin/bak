#!/bin/bash

# 'Back'ups files.
# (Toggles the file extension '.bak'.)
#
# Example:
# ```bash
# $ ls README.md  # Check existence of readme
# README.md
#
# # Simple usage
# $ bak README.md
# $ ls README.bak.md
# README.bak.md
#
# $ bak README.md.bak
# $ ls README.md
# README.md
# ```

if [[ $# -lt 1 ]] ; then
  echo 'error: require 1 or more arguments' 1>&2
  return 1
fi

function mv_exact () {
  local old_file_name=$1
  local new_file_name=$2

  if [[ -e $new_file_name ]] ; then
    echo "A file is already existent: '$new_file_name'"
  fi

  mv "$old_file_name" "$new_file_name"
}

function toggle_bak () {
  : Removes extension '.bak' or
  : Appends extension '.bak'

  if echo "$1" | grep 'bak$' > /dev/null 2>&1 ; then
    mv_exact "$1" "${1%.*}"
  else
    mv_exact "$1" "$1.bak"
  fi
}

have_error=0

for file_name in "$@" ; do
  if [[ ! -e $file_name ]] ; then
    echo "error: A file not found '${1}'" 1>&2
    have_error=1
    continue
  fi

  toggle_bak "$file_name"
done

if [[ $have_error -ne 0 ]] ; then
  return 1
fi

