#!/bin/bash

# Displays a list of processes with `BASH_TOYS_INTERACTIVE_FILTER`.
# And kills the processs you selected.
#
# ```shell-session
# $ killing-list
# (Showing a list of processes with `BASH_TOYS_INTERACTIVE_FILTER` like 'peco' and 'fzf')
# ```

function show_help() {
  cat << 'EOF'
kill-list - Interactively select and kill processes

Usage:
  kill-list [signal]
  kill-list -h | --help

Arguments:
  signal          Signal to send (default: -9)

Options:
  -h, --help      Show this help message

Description:
  Lists running processes using the configured interactive filter
  (BASH_TOYS_INTERACTIVE_FILTER) and kills the selected process(es).

Environment:
  BASH_TOYS_INTERACTIVE_FILTER    Filter command (e.g., fzf, peco)

Examples:
  kill-list
  kill-list -15
  kill-list -TERM
EOF
}

[[ $1 == --help || $1 == -h ]] && show_help && exit 0

dir=$(dirname "$0")

# shellcheck disable=SC1091
source "$dir/../define-options.sh"

if [[ -n $1 ]] ; then
  signal=$1
else
  signal=-9
fi

if [[ $(uname) == 'Darwin' ]] ; then
  selected_processes=$(ps -eo pid,lstart,command | sort -k2,6 | awk 'NR>1' | "$BASH_TOYS_INTERACTIVE_FILTER")
else
  selected_processes=$(ps -ax --format='pid,tty,command' | awk 'NR>1' | "$BASH_TOYS_INTERACTIVE_FILTER")
fi

if [[ -z "$selected_processes" ]] ; then
  echo 'Failed'
  exit 1
fi

# Extract PIDs and kill each process
target_pids=()
while IFS= read -r line; do
  pid=$(echo "$line" | awk '{print $1}')
  if [[ -n "$pid" ]]; then
    target_pids+=("$pid")
  fi
done <<< "$selected_processes"

if [[ ${#target_pids[@]} -eq 0 ]]; then
  echo 'Failed'
  exit 1
fi

# Kill each selected process
failed_count=0
for pid in "${target_pids[@]}"; do
  if kill "$signal" "$pid" 2>/dev/null; then
    echo "Killed PID: $pid"
  else
    echo "Failed to kill PID: $pid"
    ((failed_count++))
  fi
done

if [[ $failed_count -eq 0 ]]; then
  echo 'Succeed'
else
  echo "Failed to kill $failed_count process(es)"
  exit 1
fi

