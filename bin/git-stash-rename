#!/usr/bin/env bash

# See ../doc/bin.md for description

set -eu

function show_help() {
  cat << 'EOF'
git-stash-rename - Rename a git stash message

Usage:
  git-stash-rename <new_message>
  git-stash-rename <stash_index> <new_message>
  git-stash-rename -h | --help

Options:
  -h, --help    Show this help message

Description:
  Renames a git stash message by editing the stash log file directly.
  If only one argument is provided, it renames stash@{0}.
  Works correctly in git worktree environments.

Examples:
  $ git-stash-rename "Standard Dachshund"
  Renamed stash@{0}
    from: WIP on main: abc1234 Previous work
    to: Standard Dachshund

  $ git-stash-rename 0 "Miniature Dachshund"
  Renamed stash@{0}
    from: Standard Dachshund
    to: Miniature Dachshund

  $ git-stash-rename 1 "kaninchen dachshund"
  Renamed stash@{1}
    from: WIP on feature: def5678 Other work
    to: kaninchen dachshund
EOF
}

[[ ${1:-} == --help || ${1:-} == -h ]] && show_help && exit 0

stash_index=${1:-}
new_message=${2:-}

# If only one argument is provided, treat it as the message for stash@{0}
if [[ $new_message == '' ]] && [[ $stash_index != '' ]] ; then
  new_message=$stash_index
  stash_index=0
fi

if [[ $new_message == '' ]] ; then
  echo 'Required an arguments, bu no new name passed.' > /dev/stderr
  echo 'Please see --help' > /dev/stderr
  exit 1
fi

# Get the common git directory (works in worktrees too)
git_common_dir=$(git rev-parse --git-common-dir)
stash_log_file="$git_common_dir/logs/refs/stash"

if [[ ! -f $stash_log_file ]] ; then
  echo 'Error: No stash found' > /dev/stderr
  exit 1
fi

total_stashes=$(wc -l < "$stash_log_file" | tr -d ' ')

if [[ $stash_index -ge $total_stashes ]] ; then
  echo "Error: stash@{$stash_index} does not exist" > /dev/stderr
  exit 1
fi

# stash@{0} is the last line, stash@{1} is second to last, etc.
target_line=$((total_stashes - stash_index))

# Get the original message before replacing
original_message=$(sed -n "${target_line}p" "$stash_log_file" | sed 's/.*\t//')

# Replace the message part (after the last tab)
sed -i.bak "${target_line}s/\t.*$/\t${new_message}/" "$stash_log_file"

echo "Renamed stash@{$stash_index}"
echo "  from: $original_message"
echo "  to: $new_message"

# https://github.com/aiya000/bash-toys
