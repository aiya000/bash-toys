#!/bin/bash

# Executes ./configure of Vim source with modern flags
#
# Example:
#
# $ git clone https://github.com/vim/vim
# $ cd vim
# $ vim-configure

configure=$(cat << EOS
./configure \
    --prefix=/usr/local/ \
    --enable-fail-if-missing \
    --enable-gui=yes \
    --enable-multibyte=yes \
    --enable-perlinterp=yes \
    --enable-python3interp=yes \
    --enable-rubyinterp=yes \
    --enable-luainterp=dynamic \
    --enable-cscope=yes \
    --enable-gpm \
    --enable-cscope \
    --enable-fontset \
    --with-features=huge \
    --with-x \
    --with-compiledby=$USER \
    --enable-terminal
EOS
)

if [[ -f ./configure ]] ; then
  echo "$configure"
  eval "$configure"
else
  echo './configure cannot be found'
fi
