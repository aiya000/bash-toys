#!/bin/bash

# See ./doc/bin.md for description

function show_help() {
  cat << 'EOF'
kill-latest-started - Kill the most recently started process by name

Usage:
  kill-latest-started [-signal] <process_name>
  kill-latest-started -h | --help

Arguments:
  process_name    Name of the process to kill

Options:
  -signal         Signal to send (e.g., -9, -KILL, -TERM)
  -h, --help      Show this help message

Examples:
  kill-latest-started nvim
  kill-latest-started -9 nvim
  kill-latest-started nvim -KILL
EOF
}

[[ $1 == --help || $1 == -h ]] && show_help && exit 0

signal=""
process_name=""

# Parse arguments to extract signal and process name
for arg in "$@" ; do
  if [[ $arg == -* ]] ; then
    signal="$arg" # a signal like -9, -KILL, -TERM, or etc
  else
    process_name="$arg"
  fi
done

# Validate that process name is provided
if [[ $process_name == '' ]] ; then
  echo "Usage: kill-latest-started [-signal] <process_name>" >&2
  echo "Examples:" >&2
  echo "  kill-latest-started nvim" >&2
  echo "  kill-latest-started -9 nvim" >&2
  echo "  kill-latest-started nvim -9" >&2
  exit 1
fi

latest_pid=$(pgrep "$process_name" | tail -1)
if [[ $latest_pid == '' ]] ; then
  echo "Error: No process named '$process_name' found" >&2
  exit 1
fi

if kill $signal "$latest_pid" 2>/dev/null ; then
  echo "Successfully killed process '$process_name' (PID: $latest_pid) with signal ${signal:-TERM}"
else
  echo "Error: Failed to kill process '$process_name' (PID: $latest_pid)" >&2
  exit 1
fi

