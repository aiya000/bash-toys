#!/bin/bash

# Executes ./configure of Vim source with modern flags for macOS.
#
# ```shell-session
# $ git clone https://github.com/vim/vim
# $ cd vim
# $ vim-configure-debug
# ...
# ```

configure=$(cat << EOS
./configure \
    --prefix=/usr/local/ \
    --enable-fail-if-missing \
    --enable-multibyte \
    --enable-perlinterp \
    --enable-python3interp \
    --enable-rubyinterp \
    --enable-luainterp \
    --enable-cscope \
    --enable-fontset \
    --with-luajit \
    --with-lua-prefix=/usr/local/Cellar/luajit/2.0.5 \
    --with-python3-command=/usr/local/Cellar/python@3.8/3.8.6_2/bin/python3.8 \
    --with-features=huge \
    --with-compiledby=aiya000 \
    --enable-terminal
EOS
)

if [[ -f ./configure ]] ; then
  echo "$configure"
  eval "$configure"
else
  echo './configure cannot be found'
fi

