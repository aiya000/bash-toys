#!/usr/bin/env bash

# See ../doc/bin.md for description

set -euo pipefail

function show_help() {
  cat << 'EOF'
git-credential-gh-switch - Git credential helper that switches GitHub account

Usage:
  git-credential-gh-switch <account> <git-credential-args>
  git-credential-gh-switch -h | --help

Options:
  -h, --help    Show this help message

Description:
  A git credential helper that switches GitHub account using `gh auth switch`
  before delegating to `gh auth git-credential`.

  This allows you to use different GitHub accounts for different repositories
  by configuring each repository's .git/config with git config --local.

Examples:
  # For personal repositories
  $ cd ~/path/to/personal-repo
  $ git config --local credential.helper ''
  $ git config --local credential.https://github.com.helper '!/usr/bin/env git-credential-gh-switch aiya000'

  # Result in .git/config:
  [credential]
      helper =
  [credential "https://github.com"]
      helper = !/usr/bin/env git-credential-gh-switch aiya000

  # For organization repositories
  $ cd ~/path/to/organization-repo
  $ git config --local credential.helper ''
  $ git config --local credential.https://github.com.helper '!/usr/bin/env git-credential-gh-switch organizationmember'

  # Result in .git/config:
  [credential]
      helper =
  [credential "https://github.com"]
      helper = !/usr/bin/env git-credential-gh-switch organizationmember

  # Git will automatically call this helper when accessing GitHub
  $ git pull
  # (Switches to the configured account and uses its credentials)
EOF
}

[[ ${1:-} == --help || ${1:-} == -h ]] && show_help && exit 0

TARGET_ACCOUNT="$1"
shift

input=$(cat)
gh auth switch --user "$TARGET_ACCOUNT" 2>/dev/null || true
echo "$input" | gh auth git-credential "$@"

