#!/bin/bash

# Send notification with title and message to GUI

show_help() {
  cat << EOF
Usage: notify <title> <message>

Send a notification with title and message to the GUI.

Examples:
  notify "Task Complete" "Your build has finished"
  notify "Warning" "Low disk space detected"

Supported platforms:
  - Windows (WSL): Uses notifu.exe
  - macOS: Uses osascript
  - Linux: Uses notify-send

EOF
}

if command -v notifu.exe >/dev/null 2>&1 ; then # WSL
  notifu.exe /p "$1" /m "$2" &> /dev/null
elif command -v osascript >/dev/null 2>&1 ; then # macOS
  osascript -e "display notification \"$2\" with title \"$1\""
elif command -v notify-send >/dev/null 2>&1 ; then # Pure Linux
  notify-send "$1" "$2"
else
  echo "Error: No notification system available on this platform."
  echo ""
  show_help
fi

