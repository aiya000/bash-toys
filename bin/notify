#!/bin/bash

# Sends notification with title and message to your Desktop
#
# ```shell-session
# # Simple usage:
# $ notify title message
#
# # Notify with sound:
# $ notify title message /path/to/sound
# ```
#
# Note for macOS :
# To make notifications stay longer, go to System Settings > Notifications & Focus,
# find "Script Editor" and change the alert style to "Alerts" instead of "Banners".

function show_help() {
  cat << EOF
Usage: notify <title> <message> [sound]

Send a notification with title and message to the GUI.

Examples:
  notify 'Task Complete' 'Your build has finished'
  notify 'Warning' 'Low disk space detected' /path/to/bash-toys/assets/notification-1.mp3
  notify 'Reminder' 'Meeting time' 'default' /path/to/sound-you-like.ogg

Supported platforms:
  - Windows (WSL): Uses notifu.exe
  - macOS: Uses osascript
  - Linux: Uses notify-send

macOS Note:
  To make notifications stay longer, go to System Settings > Notifications & Focus,
  find "Script Editor" and change the alert style to "Alerts" instead of "Banners".

EOF
}

[[ $1 == --help ]] && show_help && exit 0

if [[ $# -lt 2 ]] ; then
  show_help
  exit 1
fi

title="$1"
message="$2"
sound="${3:-}"

# WSL
if command -v notifu.exe >/dev/null 2>&1 ; then
  if [[ $sound != '' ]] ; then
    echo "Error: Sorry, this feature is not implemented yet for your environment." 2>&1
    exit 1
  fi
  notifu.exe /p "$title" /m "$message" &> /dev/null
  exit
fi

# macOS
if command -v osascript >/dev/null 2>&1 ; then
  osascript -e "display notification \"$message\" with title \"$title\""
  if [[ $sound != '' ]] ; then
    afplay "$sound" &
  fi
  exit
fi

# Pure Linux
if command -v notify-send >/dev/null 2>&1 ; then
  notify-send "$title" "$message"
  if [[ $sound != '' ]] ; then
    paplay "$sound" &
  fi
  exit
fi

echo 'Error: No notification system available on this platform.'
echo
show_help

