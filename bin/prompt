#!/bin/bash

# See ../doc/bin.md for description

function show_help() {
  cat << 'EOF'
prompt - Display a prompt and wait for the user to press Enter

Usage:
  prompt [message]
  prompt -h | --help

Arguments:
  message     The message to display (default: 'Enter to continue...')

Options:
  -h, --help  Show this help message

Description:
  Displays a prompt and waits for the user to press any key.
  Always exits with 0 regardless of the input.
  A convenient wrapper around `confirm --always-true --full-message`.

Examples:
  prompt
  # Prompt: 'Enter to continue...'

  prompt 'Press Enter to deploy: '
  # Prompt: 'Press Enter to deploy: '
EOF
}

[[ $1 == --help || $1 == -h ]] && show_help && exit 0

message=${1:-'Enter to continue...'}

confirm --always-true --full-message "$message"

