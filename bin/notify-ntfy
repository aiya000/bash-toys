#!/bin/bash

# See ./doc/bin.md for description

function show_help() {
  cat << EOF
Usage: notify-ntfy <title> <message>

Send a notification to mobile devices via ntfy.sh.

Environment Variables:
  BASH_TOYS_NTFY_TOPIC    Required. Your ntfy.sh topic name.

Examples:
  notify-ntfy 'Task Complete' 'Your build has finished'
  notify-ntfy 'Warning' 'Low disk space detected'

EOF
}

[[ $1 == --help || $1 == -h ]] && show_help && exit 0

if [[ $# -lt 2 ]] ; then
  show_help
  exit 1
fi

if [[ -z "${BASH_TOYS_NTFY_TOPIC:-}" ]] ; then
  echo "Error: BASH_TOYS_NTFY_TOPIC environment variable is required" >&2
  exit 1
fi

title="$1"
message="$2"

if ! curl -s \
  -H "Title: $title" \
  -d "$message" \
  "https://ntfy.sh/$BASH_TOYS_NTFY_TOPIC" > /dev/null ; then
  echo "Error: Failed to send notification to ntfy.sh" >&2
  exit 1
fi

