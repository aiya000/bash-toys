#!/bin/bash

# Skips n-lines from the beginning of the output.
# ```shell-session
# $ seq 10 | skip 3
# 4
# 5
# 6
# 7
# 8
# 9
# 10
# ```

num_lines_to_skip=$1
input_file=$2

if [[ -n "$input_file" ]] ; then
  # From file
  if [[ ! -f "$input_file" ]] ; then
    echo "Error. File not found: $input_file" 1>&2
    exit 1
  fi
  input_source="$input_file"
else
  # From pipe
  input_source=-
fi

tail -n +"$((num_lines_to_skip + 1))" "$input_source"

