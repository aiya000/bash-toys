#!/bin/bash

# See ../doc/bin.md for description

function show_help () {
  cat << 'EOF'
rm-dust - Alternative to rm that moves files to dustbox instead of deletion

Usage:
  rm-dust FILE...
  rm-dust --restore [FILE...]
  rm-dust --help

Arguments:
  FILE...          Files to move to dustbox or restore

Options:
  -h, --help      Show this help message
  --restore       Restore files from dustbox

Notes:
  - Files are moved to $BASH_TOYS_DUSTBOX_DIR
  - Timestamp is added to filename to prevent conflicts
  - Directory structure is flattened (/ replaced with +)
  - Use --restore to interactively select and restore files
EOF
}

restore_mode=false
args=()
for arg in "$@"; do
  if [[ $arg == --restore ]]; then
    restore_mode=true
  else
    args+=("$arg")
  fi
done
set -- "${args[@]}"

[[ $1 == --help || $1 == -h ]] && show_help && exit 0

dir=$(dirname "$0")

# shellcheck disable=SC1091
source "$dir/../define-options.sh"

if [[ ! -d $BASH_TOYS_DUSTBOX_DIR ]] ; then
  mkdir -p "$BASH_TOYS_DUSTBOX_DIR"
fi

if [[ $restore_mode == true ]] ; then
  # Restore mode
  if [[ $# -eq 0 ]] ; then
    # Interactive mode - use filter to select files
    if [[ ! -d $BASH_TOYS_DUSTBOX_DIR ]] || [[ -z $(ls -A "$BASH_TOYS_DUSTBOX_DIR" 2>/dev/null) ]] ; then
      echo "Dustbox is empty"
      exit 0
    fi
    
    selected_files=$(ls -1 "$BASH_TOYS_DUSTBOX_DIR" | eval "$BASH_TOYS_INTERACTIVE_FILTER")
    
    if [[ -z $selected_files ]] ; then
      echo "No files selected"
      exit 0
    fi
    
    # Process each selected file
    while IFS= read -r dustbox_file ; do
      if [[ -z $dustbox_file ]] ; then
        continue
      fi
      
      # Extract original path by reversing the transformation
      # Remove timestamp pattern: _YYYY-MM-DD_HH:MM:SS and optional extension
      original_name=$(echo "$dustbox_file" | sed -E 's/_[0-9]{4}-[0-9]{2}-[0-9]{2}_[0-9]{2}:[0-9]{2}:[0-9]{2}(\.[^.]+)?$//')
      # Replace + with /
      original_path=$(echo "$original_name" | sed 's;+;/;g')
      
      # Create parent directory if needed
      parent_dir=$(dirname "$original_path")
      if [[ $parent_dir != '.' ]] && [[ ! -d $parent_dir ]] ; then
        mkdir -p "$parent_dir"
      fi
      
      echo mv "$BASH_TOYS_DUSTBOX_DIR/$dustbox_file" "$original_path"
      mv "$BASH_TOYS_DUSTBOX_DIR/$dustbox_file" "$original_path"
    done <<< "$selected_files"
  else
    # Direct file restoration
    for dustbox_file in "$@" ; do
      if [[ ! -f "$BASH_TOYS_DUSTBOX_DIR/$dustbox_file" ]] ; then
        echo "File not found in dustbox: $dustbox_file"
        continue
      fi
      
      # Extract original path
      original_name=$(echo "$dustbox_file" | sed -E 's/_[0-9]{4}-[0-9]{2}-[0-9]{2}_[0-9]{2}:[0-9]{2}:[0-9]{2}(\.[^.]+)?$//')
      original_path=$(echo "$original_name" | sed 's;+;/;g')
      
      # Create parent directory if needed
      parent_dir=$(dirname "$original_path")
      if [[ $parent_dir != '.' ]] && [[ ! -d $parent_dir ]] ; then
        mkdir -p "$parent_dir"
      fi
      
      echo mv "$BASH_TOYS_DUSTBOX_DIR/$dustbox_file" "$original_path"
      mv "$BASH_TOYS_DUSTBOX_DIR/$dustbox_file" "$original_path"
    done
  fi
else
  # Normal mode - move files to dustbox
  for file in "$@" ; do
    maybe_ext=${file##*.}
    if [[ $file != "$maybe_ext" ]] ; then
      ext=".$maybe_ext"
    fi
    new_name=$(echo "${file}_$(date +'%Y-%m-%d')_$(date +'%H:%M:%S')$ext" | sed 's;/;+;g')

    echo mv "$file" "$BASH_TOYS_DUSTBOX_DIR/$new_name"
    mv "$file" "$BASH_TOYS_DUSTBOX_DIR/$new_name"
  done
fi

