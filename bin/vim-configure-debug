#!/bin/bash

# Executes ./configure of Vim source for testing Vim.
#
# ```shell-session
# $ git clone https://github.com/vim/vim
# $ cd vim
# $ vim-configure-debug
# ...
# ```

function show_help() {
  cat << 'EOF'
vim-configure-debug - Configure Vim source for debugging/testing

Usage:
  vim-configure-debug
  vim-configure-debug -h | --help

Options:
  -h, --help      Show this help message

Description:
  Runs ./configure for Vim with minimal features for faster builds
  and debugging. Disables GUI, Python, Ruby, Perl, Lua interpreters.

Examples:
  git clone https://github.com/vim/vim
  cd vim
  vim-configure-debug
  make
EOF
}

[[ $1 == --help || $1 == -h ]] && show_help && exit 0

configure=$(cat << EOS
./configure \
    --prefix=/usr/local/ \
    --enable-fail-if-missing \
    --enable-gui=no \
    --enable-multibyte=yes \
    --enable-perlinterp=no \
    --enable-pythoninterp=no \
    --enable-python3interp=no \
    --enable-rubyinterp=no \
    --enable-luainterp=no \
    --with-lua-prefix=/usr \
    --with-luajit \
    --enable-cscope=yes \
    --with-features=huge \
    --with-compiledby=$USER \
    --enable-terminal
EOS
)

if [[ -f ./configure ]] ; then
  echo "$configure"
  eval "$configure"
else
  echo './configure cannot be found'
fi

