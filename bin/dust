#!/bin/bash

# An alternative of `rm`, but move to dustbox instead.
#
# Example:
#
# $ touch example-file
# $ dust example-file
# mv example-file /home/aiya000/.backup/dustbox/example-file_2025-02-24_07:28:40  # The result is shown

dir=$(dirname "$0")

# shellcheck disable=SC1091
source "$dir/../default-options.sh"

if [[ ! -d $BASH_TOYS_DUSTBOX_DIR ]] ; then
  mkdir -p "$BASH_TOYS_DUSTBOX_DIR"
fi

for file in "$@" ; do
  maybe_ext=${file##*.}
  if [[ $file != "$maybe_ext" ]] ; then
    ext=".$maybe_ext"
  fi
  new_name=$(echo "${file}_$(date +'%Y-%m-%d')_$(date +'%H:%M:%S')$ext" | sed 's;/;+;g')

  echo mv "$file" "$BASH_TOYS_DUSTBOX_DIR/$new_name"
  mv "$file" "$BASH_TOYS_DUSTBOX_DIR/$new_name"
done

